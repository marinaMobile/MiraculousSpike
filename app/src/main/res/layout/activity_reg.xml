<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".four.acti.RegAct"
    android:background="@drawable/backmain">

    <EditText
        android:id="@+id/nameText"
        android:layout_width="180dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/item_clr_sec"
        android:layout_margin="36dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/totalBalanceMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/item_clr_sec"
        android:text="Your total balance is: "
        android:padding="12dp"
        android:fontFamily="@font/jost_bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_margin="36dp"
        android:gravity="center"
        />



    <Button
        android:id="@+id/oneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start wheel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/threeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start three"
        app:layout_constraintTop_toBottomOf="@id/twoBtn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/twoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start second wheel"
        app:layout_constraintTop_toBottomOf="@id/oneBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/shopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit the shop!"
        app:layout_constraintTop_toBottomOf="@id/oneBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="256dp"
        android:backgroundTint="@color/black"/>



</androidx.constraintlayout.widget.ConstraintLayout>